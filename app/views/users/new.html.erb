<div class="login">
  <div class="container">
    <div class="form">

      <h1> Sign Up </h1>

      <%= form_for(@user) do |f| %>
      <%= f.text_field :name, :placeholder => "User Name" %>
      <%= f.text_field :password, :placeholder => "Password" %>
      <%= f.submit "Create an account", class: "btn-submit" %>
      <% end %>
    </div>
  </div>
</div>
